<h1>To Do List</h1>
<hr>

<h2>Edit client: @Model["client"].GetName()</h2>
<form action='/clients/@Model["client"].GetId()' method="post">
  <label for="newName">Name:</label>
  <input type="text" name="newName" value='@Model["client"].GetName()'>
  <label for="newDueDate">Due Date:</label>
  <input type="date" name="newDueDate" id="newDueDate" value='@Model["item"].GetDueDate()'>
  <button type="submit">Edit</button>
</form>

<h4><a href='/clients/@Model["client"].GetId()'>Return to previous page</a></h4>
